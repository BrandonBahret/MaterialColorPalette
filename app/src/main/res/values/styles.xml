<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/appBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@android:style/Widget.PopupMenu">
        <item name="colorControlNormal">@color/android:white</item>
        <item name="titleTextColor">@color/android:white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Layout Styles-->
    <style name="Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#2d000000</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="Text.MaterialColorView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.MaterialSwatchLauncherView">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
