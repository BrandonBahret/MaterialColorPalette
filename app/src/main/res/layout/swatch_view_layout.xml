<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/material_swatch_launcher_icon_size"
              android:layout_height="@dimen/material_swatch_launcher_icon_size"
              android:background="@drawable/background_swatch_view"
              android:elevation="4dp"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/color_title"
        style="@style/MaterialSwatchLauncherViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Color Title"/>
</LinearLayout>